<% if task.status == false %>
  <%= link_to '未完了', status_task_path(task), {method: :post, remote: :true, class: "status_btn#{task.id} btn btn-danger"} %>
<% else %>
  <%= link_to '完了', status_task_path(task), {method: :post, remote: :true, class: "status_btn#{task.id} btn btn-success"} %>
<% end %>
