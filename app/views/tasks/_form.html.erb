<%= form_for @task do |f| %>
  <% if @task.errors.any? %>
    <div id= "error_explanation" >
      <div class="alert alert-danger" role="alert">
        <h2> <%= @task.errors.count %>件のエラーがあります</h2>
        <ul>
          <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="card mb-5">
    <div class="card-body">
      <h5><%= "#{@form_name}" %></h5>
      <div class="form-group">
        <%= f.label :Todo名 %>
        <%= f.text_field :task_name, class:"form-control", placeholder:"30文字以内で入力してください" %>
      </div>

      <div class="form-group">
        <%= f.label :期限 %><br />
        <%= f.date_field :deadline %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :status %>
      </div>

      <div class="form-group text-right">
        <%= f.submit "#{@btn_name}", class:'btn btn-primary btn-md' %>
      </div>

      <% unless @tasks.nil? %>
        <% if @tasks.count == 0 %>
          <stroung class="result_msg">登録されたToDoはございません</stroung>
        <% end %> <%# if %>
      <% end %> <%# unless %>

    </div>
  </div>
<% end %>
